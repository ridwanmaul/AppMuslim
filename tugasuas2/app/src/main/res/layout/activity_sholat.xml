<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sholat1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBlue"
    tools:context="paket.example.ProjectUas.Sholat">

    <LinearLayout
        android:id="@+id/topPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorSecondaryBlue"
        android:padding="@dimen/padding">

        <Spinner
            android:id="@+id/kota"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_tanggal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/vertical_margin"
                android:layout_marginBottom="@dimen/vertical_margin"
                android:textColor="@color/white"
                android:fontFamily="@font/nextart"
                android:textSize="15dp"
                android:textStyle="bold"
                android:text="Tanggal"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/topPanel"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:fontFamily="@font/nextart"
                android:textSize="15dp"
                android:textStyle="bold"
                android:text="Subuh"/>

            <TextView
                android:id="@+id/tv_subuh"
                android:textColor="@color/white"
                android:fontFamily="@font/nextart"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:hint="Waktu"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:fontFamily="@font/nextart"
                android:textSize="15dp"
                android:textStyle="bold"
                android:text="Dzuhur"/>

            <TextView
                android:id="@+id/tv_dzuhur"
                android:textColor="@color/white"
                android:fontFamily="@font/nextart"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:hint="Waktu"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:fontFamily="@font/nextart"
                android:textSize="15dp"
                android:textStyle="bold"
                android:text="Ashar"/>

            <TextView
                android:id="@+id/tv_ashar"
                android:textColor="@color/white"
                android:fontFamily="@font/nextart"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:hint="Waktu"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:fontFamily="@font/nextart"
                android:textSize="15dp"
                android:textStyle="bold"
                android:text="Maghrib"/>

            <TextView
                android:id="@+id/tv_maghrib"
                android:textColor="@color/white"
                android:fontFamily="@font/nextart"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:hint="Waktu"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:fontFamily="@font/nextart"
                android:textSize="15dp"
                android:textStyle="bold"
                android:text="Isya"/>

            <TextView
                android:id="@+id/tv_isya"
                android:textColor="@color/white"
                android:fontFamily="@font/nextart"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:hint="Waktu"/>

        </RelativeLayout>

    <TextView
        android:id="@+id/txtArabLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/arab"
        android:gravity="center"
        android:paddingRight="16dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="إِنَّ أَوَّلَ مَا يُحَاسَبُ بِهِ العَبْدُ يَوْمَ القِيَامَةِ مِنْ عَمَلِهِ صَلَاتُهُ فَإِنْ صَلَحَتْ فَقَدْ أَفْلَحَ وَأَنْجَحَ وَإِنْ فَسَدَتْ فَقَدْ خَابَ وَخَسَرَ"
        android:textColor="@color/hitam"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtArtiLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nextartbold"
        android:text="“Sesungguhnya amal hamba yang pertama kali akan dihisab adalah shalatnya. Jika shalatnya baik, dia sukses dan berhasil dan jika shalatnya rusak, dia sangat rugi”"
        android:textAlignment="center"
        android:textColor="@color/hitam"
        android:textSize="8dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtArabLabel" />

    <TextView
        android:id="@+id/txtAyatLabel"
        android:layout_width="138dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="120dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/nextart"
        android:text=" (HR. Nasai dan Turmudzi)"
        android:textAlignment="center"
        android:textColor="@color/hitam"
        android:textSize="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtArtiLabel" />
    </LinearLayout>