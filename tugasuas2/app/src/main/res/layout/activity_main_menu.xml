<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hitam"
    tools:context="paket.example.ProjectUas.MainMenuActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/front"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/txtArabLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="يَارَبِّ زِدْنِىْ عِلْمًا وَارْزُقْنِىْ فَهْمًا"
        android:fontFamily="@font/arab"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="150dp"/>

    <TextView
        android:id="@+id/txtArtiLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="“Ya Allah, tambahkanlah aku ilmu dan berikanlah aku rizqi akan kepahaman”"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtArabLabel"
        android:fontFamily="@font/nextartbold"
        android:textSize="10dp"
        android:textAlignment="center"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/buttonDzikirPagi"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="250dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/btn_rounded"
        android:fontFamily="@font/aladin"
        android:paddingTop="10dp"
        android:paddingBottom="15dp"
        android:text="Dzikir Pagi"
        android:textColor="@color/white"
        android:textSize="22dp"
        android:onClick="clickDzikirPagi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonDzikirSore"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_rounded"
        android:fontFamily="@font/aladin"
        android:paddingTop="8dp"
        android:paddingBottom="15dp"
        android:text="DZIKIR SORE"
        android:onClick="clickDzikirSore"
        android:textColor="@color/white"
        android:textSize="22dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonDzikirPagi" />



</androidx.constraintlayout.widget.ConstraintLayout>